addDefaults(default="node") ->
  -> addBundle("sys-node")
  -> addBundle("web")
  -> addBundle("web3")

addDefaults("browser") ->
  -> addBundle("sys-browser")
  -> addBundle("web")
  -> addBundle("web3")

x sys:
  logger
  concurrent
  random
  datetime

x sys-node:
  sys
  file-system
  file-system-uri-resolver

x sys-browser:
  sys

x web:
  http
  ws
  resolvers:
    http-resolver
    ws-resolver

