addDefaults(default="node") ->
  -> addBundle("sys-node")
  -> addBundle("web")
  -> addBundle("web3")

addDefaults("browser") ->
  -> addBundle("sys-browser")
  -> addBundle("web")
  -> addBundle("web3")

sys:
  logger
  concurrent
  random
  datetime
  file-system
  resolvers:
    file-system-resolver

web:
  http
  ws
  resolvers:
    http-resolver
    ws-resolver

web3:
  ethereum-wallet
  ipfs-http-client
  resolvers:
    ipfs-resolver
    ens-resolver
