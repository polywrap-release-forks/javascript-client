addDefaults(default="node") ->
  -> addBundle("sys-node")
  -> addBundle("web")
  -> addBundle("web3")

addDefaults("browser") ->
  -> addBundle("sys-browser")
  -> addBundle("web")
  -> addBundle("web3")

x sys:
  logger
  concurrent
  random
  datetime

x sys-node:
  file-system
  file-system-uri-resolver

x sys-browser:
  sys

x web:
  http
  ws
  resolvers:
    http-resolver
    ws-resolver

x web3:
  ethereum-wallet
  ipfs-http-client
  resolvers:
    ipfs-resolver
    ens-resolver

