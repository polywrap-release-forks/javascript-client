addDefaults(default="node") ->
  -> addBundle("sys-node")
  -> addBundle("web")
  -> addBundle("web3")

addDefaults("browser") ->
  -> addBundle("sys-browser")
  -> addBundle("web")
  -> addBundle("web3")

